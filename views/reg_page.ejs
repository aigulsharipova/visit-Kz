<%- include('parts/header'); %>
    <section class="section-user">
        <div class="container">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="users_reg" data-toggle="tab" href="#home" role="tab" aria-controls="home"
                        aria-selected="true">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile"
                        aria-selected="false">Login</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="users_reg">
                    <form action="/users/reg" method="POST" class="d-flex flex-column">
                        <p>Login: <input class="w-100" type="text" name="reg_login"></p>
                        <p>Email: <input class="w-100" type="email" name="reg_email"></p>
                        <p>Password: <input class="w-100" type="password" name="reg_pass"></p>
                        <p>Name: <input class="w-100" type="text" name="reg_name"></p>
                        <p>Lastname: <input class="w-100" type="text" name="reg_lastname"></p>
                        <input class="w-100 btn btn-primary" type="submit" value="Submit">
                    </form>
                </div>
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <form action="/users/login" method="POST" class="d-flex flex-column">
                        <p>Login: <input class="w-100" type="text" name="reg_login"></p>
                        <p>Password: <input class="w-100" type="password" name="reg_pass"></p>
                        <input class="w-100 btn btn-primary" type="submit" value="Submit">
                    </form>
                </div>
            </div>
        </div>
    </section>
<%- include('parts/footer'); %>